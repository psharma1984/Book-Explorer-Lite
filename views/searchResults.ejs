<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<h2>Search Results for <span style="color:red;"><%= query %></span></h2>

<% if (results.length > 0) { %>
    <ul>
        <% results.forEach((result) => { %>
            <li><a href="/books/<%= result._id %>"><%= result.title %></a></li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No results found</p>
<% } %>
