<h1 style="text-align: center; color:white">Book Explorer Lite</h1>
<% if (user) { %>
   <p>User <%= user.name %> is logged on.</p>
   <form method="POST" action="/sessions/logoff">
         <input type="hidden" name="_csrf" value="<%= _csrf %>">
   <button class="btn btn-secondary">Logoff</button>
   </form>
<% } %>
<% if (errors) {
    errors.forEach((err)=>{ %>
        <div>Error: <%= err%> </div>
<%   }) }%>
<% if(info){
    info.forEach((msg)=> { %>
        <div>Info: <%= msg%> </div>
<%  }) }%>
<hr />
